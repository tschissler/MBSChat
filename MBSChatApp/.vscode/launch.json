{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Blazor Server)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/MBSChatWeb/bin/Debug/net7.0/MBSChatWeb.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "requireExactSource": false
        }
    ]
}
